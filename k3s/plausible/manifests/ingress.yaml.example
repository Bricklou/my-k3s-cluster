---
apiVersion: traefik.io/v1alpha1
kind: Middleware
metadata:
  name: redirect-to-https
  namespace: plausible
spec:
  redirectScheme:
    scheme: https
    permanent: true

---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: plausible-ingress
  namespace: plausible

spec:
  entryPoints:
    - web
    - websecure
  routes:
    - match: Host(`some-host.com`)
      kind: Rule
      services:
        - name: plausible
          port: plausible
      middlewares:
        - name: redirect-to-https