---
apiVersion: traefik.io/v1alpha1
kind: Middleware
metadata:
  name: redirect-to-https
  namespace: authentik
spec:
  redirectScheme:
    scheme: https
    permanent: true

---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: authentik-ingress
  namespace: authentik

spec:
  entryPoints:
    - web
    - websecure
  routes:
    - match: Host(`some-host.com`)
      kind: Rule
      services:
        - name: authentik
          port: http
      middlewares:
        - name: redirect-to-https